@{
    string activeText = _PagingPartialView.activeText;
    string disabledText = _PagingPartialView.disabledText;

    _PagingPartialView.Settings settings = ViewBag.Settings;

    int actionLink1Number = settings.ActionLink1Number;
    int actionLink2Number = settings.ActionLink2Number;
    int actionLink3Number = settings.ActionLink3Number;

    int pageNumber = settings.PageNumber;
    int activeLinkNumber = settings.ActiveLinkNumber;
}

<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item @settings.PrevDisabled">
            @if (settings.PrevDisabled != disabledText)
            {
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = pageNumber - 1, clickedLinkType = "Prev", activeLinkNumber = activeLinkNumber })" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            }
            else
            {
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            }
        </li>
        <li class="page-item @settings.ActionLink1Active @settings.ActionLink1Disabled">
            @if (settings.ActionLink1Active == activeText)
            {
                <span class="page-link">
                    @settings.ActionLink1Number
                    <span class="sr-only">(current)</span>
                </span>
            }
            else
            {
                @Html.ActionLink(actionLink1Number.ToString(), "Index", new { pageNumber = settings.ActionLink1Number, clickedLinkType = "First" }, new { @class = "page-link" })
            }
        </li>
        <li class="page-item @settings.ActionLink2Active @settings.ActionLink2Disabled">
            @if (settings.ActionLink2Active == activeText)
            {
                <span class="page-link">
                    @settings.ActionLink2Number
                    <span class="sr-only">(current)</span>
                </span>
            }
            else if (settings.ActionLink2Disabled == disabledText)
            {
                <span class="page-link">&nbsp;</span>
            }
            else
            {
                @Html.ActionLink(actionLink2Number.ToString(), "Index", new { pageNumber = settings.ActionLink2Number, clickedLinkType = "Second" }, new { @class = "page-link" })
            }
        </li>
        <li class="page-item @settings.ActionLink3Active @settings.ActionLink3Disabled">
            @if (settings.ActionLink3Active == activeText)
            {
                <span class="page-link">
                    @settings.ActionLink3Number
                    <span class="sr-only">(current)</span>
                </span>
            }
            else if (settings.ActionLink3Disabled == disabledText)
            {
                <span class="page-link">&nbsp;</span>
            }
            else
            {
                @Html.ActionLink(actionLink3Number.ToString(), "Index", new { pageNumber = settings.ActionLink3Number, clickedLinkType = "Third" }, new { @class = "page-link" })
            }
        </li>
        <li class="page-item @settings.NextDisabled">
            @if (settings.NextDisabled != disabledText)
            {
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = pageNumber + 1, clickedLinkType = "Next", activeLinkNumber = activeLinkNumber })" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            }
            else
            {
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            }
        </li>
    </ul>
</nav>
